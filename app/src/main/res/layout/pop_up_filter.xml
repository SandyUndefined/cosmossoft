                    <Button android:id="@+id/FilterAnalyticResetButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/reset" android:layout_marginStart="5sp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
