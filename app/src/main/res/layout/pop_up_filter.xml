                <TextView android:textSize="12sp" android:gravity="center" android:id="@+id/ToFilterAnalyticDate" android:background="@drawable/third_rectangle" android:paddingLeft="11sp" android:paddingTop="8sp" android:paddingRight="11sp" android:paddingBottom="8sp" android:layout_width="140sp" android:layout_height="wrap_content" android:hint="@string/to_date" android:layout_marginStart="3sp" android:paddingHorizontal="11sp" android:paddingVertical="8sp"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8sp" android:layout_below="@+id/ToFilterAnalyticDateSection">
