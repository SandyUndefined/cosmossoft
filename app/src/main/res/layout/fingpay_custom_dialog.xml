<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="center" android:background="@color/app_bg" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TextView android:id="@+id/tv_alert" android:layout_margin="5dp" android:text="@string/alert_dialog_title" android:layout_centerHorizontal="true" style="@style/text"/>
    <View android:id="@+id/view1" android:background="@color/grey" android:layout_width="wrap_content" android:layout_height="1dp" android:layout_below="@+id/tv_alert"/>
    <TextView android:gravity="center" android:id="@+id/tv_message_fingpay" android:layout_margin="5dp" android:minWidth="250dp" android:minHeight="70dp" android:layout_below="@+id/view1" android:layout_centerHorizontal="true" style="@style/text"/>
    <View android:id="@+id/view2" android:background="@color/grey" android:layout_width="wrap_content" android:layout_height="1dp" android:layout_below="@+id/tv_message_fingpay"/>
    <Button android:id="@+id/btn_ok_fingpay" android:layout_width="130dp" android:layout_height="45dp" android:layout_margin="5dp" android:layout_marginBottom="10dp" android:text="@string/ok_btn" android:layout_below="@+id/view2" android:layout_centerHorizontal="true" style="@style/button"/>
</RelativeLayout>
