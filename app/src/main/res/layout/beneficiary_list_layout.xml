        <TextView android:textSize="12sp" android:id="@+id/beneficiary_bank_name" android:tag="binding_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1sp" android:layout_marginBottom="1sp" android:fontFamily="@font/sagnika" android:layout_marginVertical="1sp"/>
    </LinearLayout>
    <ImageView android:id="@+id/deleteBeneficiary" android:layout_width="45dp" android:layout_height="24dp" android:src="@drawable/ic_more" android:layout_centerVertical="true" android:contentDescription="@string/todo" android:layout_marginEnd="10dp" android:layout_alignParentEnd="true"/>
    <View android:id="@+id/contactDivider" android:background="?android:attr/listDivider" android:layout_width="match_parent" android:layout_height="1sp" android:layout_below="@+id/beneficiary_image" android:layout_marginStart="53sp"/>
</RelativeLayout>
